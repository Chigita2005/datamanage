#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int roll_dice() {
    return rand() % 6 + 1; 
}

int main() {
　　　printf("Rolling dice...\n");
    srand(time(NULL)); 

    int dice1 = roll_dice();
    int dice2 = roll_dice();
    int sum = dice1 + dice2;

    printf("Dice 1: %d\n", dice1);
    printf("Dice 2: %d\n", dice2);
    printf("Sum: %d\n", sum);

    return 0;
}
